# ============================================================
# GLOBAL SECURITY CONTROLS
# ============================================================
limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;

# ============================================================
# HTTP SERVER - Always enabled, handles ACME challenges
# ============================================================
server {
    listen 80;
    server_name {{ domain_name }};
    server_tokens off;

    # ACME challenge for Let's Encrypt (REQUIRED for certificate generation)
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
        try_files $uri =404;
    }

    # Redirect to HTTPS if certificate exists, otherwise show setup message
    location / {
        # Check if SSL certificate exists
        if (-f /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem) {
            return 301 https://$host$request_uri;
        }
        
        # If no cert yet, show setup message
        add_header Content-Type text/plain;
        return 200 "VS Code Server setup in progress. HTTPS will be enabled once SSL certificates are generated.";
    }
}

# ============================================================
# HTTPS SERVER - Only enabled when certificates exist
# ============================================================
server {
    listen 443 ssl http2;
    server_name {{ domain_name }};
    server_tokens off;

    # SSL Configuration
    ssl_certificate /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ domain_name }}/chain.pem;

    # Don't start if certs don't exist
    if (!-f /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem) {
        return 444;
    }

    # ------------------------------------------------------------
    # TLS — MODERN ONLY
    # ------------------------------------------------------------
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 1.1.1.1 8.8.8.8 valid=300s;
    resolver_timeout 5s;

    # ------------------------------------------------------------
    # SECURITY HEADERS — CODE-SERVER SAFE BASELINE
    # ------------------------------------------------------------
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=(), usb=(), payment=(), interest-cohort=()" always;

    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' wss:; frame-ancestors 'none'; base-uri 'none'; form-action 'self';" always;

    # ------------------------------------------------------------
    # PROXY HARDENING
    # ------------------------------------------------------------
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    proxy_hide_header X-Powered-By;
    proxy_hide_header Server;

    proxy_buffering off;
    proxy_request_buffering off;

    proxy_connect_timeout 30s;
    proxy_send_timeout 600s;
    proxy_read_timeout 600s;

    # ------------------------------------------------------------
    # APPLICATION ROUTING
    # ------------------------------------------------------------
    location / {
        limit_req zone=api burst=20 nodelay;
        proxy_pass http://code-server:8080;
    }
}
